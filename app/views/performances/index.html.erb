<div class="wrapper">
  <div class="container all-performances-container">
    <h1>All the <span>performances !</span></h1>
    <div class="row">
      <% @performances.each do |performance| %>
        <div class="col-sm-6">
          <div class="card" style="background-image: linear-gradient(-135deg, rgba(252, 234, 187, 0.5) 0%, rgba(248, 181, 0, 0.4) 50%), url('<%= image_path('smiling-mr-bean-grey.jpg') %>');" >
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= link_to performance.name, performance_path(performance) %></h2>
              <p><%= performance.speciality %></p>
              <p><%= performance.price %></p>
            </div>
            <%= image_tag('loue-un-con-logo_f49gha.png')%>
            <a class="card-link" href="#" ></a>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>

