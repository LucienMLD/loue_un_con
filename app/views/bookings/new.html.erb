<div class="container">
  <div class="row">
    <h2 class="text-center">Create booking</h2>
    <div class="col-md-4 col-md-offset-4">

      <%= simple_form_for [@performance, @booking] do |f| %>

        <div class="form-inputs">
          <%= f.input :start_date%>
          <%= f.input :end_date%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Create" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
